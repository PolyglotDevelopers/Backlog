@model CompanyModel
@{
    ViewData["Title"] = Localize("CompanyPage.Title");
}

<div class="card card-header-border">
    <div class="card-header pb-0">
        <h3><i class="fa fa-edit me-2"></i>@Localize("CompanyPage.Title").Text</h3>
    </div>
    <div class="card-body p-3">
        <form asp-action="Edit" enctype="multipart/form-data">
            @await Html.PartialAsync("_Form", Model)
            <div class="float-end">
                <div class="btn-icon-list">
                    <button type="submit" name="save" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i></i>@Localize("Button.Save")
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-dark btn-with-icon">
                        <i class="fas fa-ban me-1"></i>@Localize("Button.Cancel")
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>