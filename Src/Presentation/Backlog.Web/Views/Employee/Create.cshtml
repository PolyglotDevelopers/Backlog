@model EmployeeRegistrationModel
@{
    ViewData["Title"] = Localize("EmployeePage.Title");
}

<div class="card card-header-border">
    <div class="card-header pb-0">
        <h3><i class="fa fa-edit me-2"></i>@Localize("EmployeePage.Title").Text</h3>
    </div>
    <form asp-action="Create">
        <div class="card-body p-3">
            @await Html.PartialAsync("_Form", Model)
        </div>
        <div class="card-footer text-end p-3">
            <div class="row">
                <div class="col-sm-4 text-start">
                    <label class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" asp-for="Employee.EmailWelcomeKit">
                        <pd-label asp-for="Employee.EmailWelcomeKit" />
                    </label>
                </div>
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>@Localize("Button.Save")</button>
                    @if (Model.Employee.Id <= 0)
                    {
                        <button type="submit" name="save-continue" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>@Localize("Button.SaveAndContinue")
                        </button>
                    }
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-ban me-1"></i>@Localize("Button.Cancel")</a>
                </div>
            </div>            
        </div>
    </form>
</div>