@model CurrencyModel
@Html.AntiForgeryToken()
<input type="hidden" asp-for="Id" />
<div class="validation-errors"></div>
<div class="row">
    <div class="col-md-12">
        <div class="mb-3">
            <pd-label asp-for="Name" />
            <input asp-for="Name" class="form-control form-control-maxlength" autocomplete="off" maxlength="100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <pd-label asp-for="CurrencyCode" />
            <input asp-for="CurrencyCode" class="form-control form-control-maxlength" autocomplete="off" maxlength="10" />
            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <pd-label asp-for="CurrencySymbol" />
            <input asp-for="CurrencySymbol" class="form-control form-control-maxlength" maxlength="10" autocomplete="off" />
            <span asp-validation-for="CurrencySymbol" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <pd-label asp-for="DecimalPlace" />
            <input asp-for="DecimalPlace" class="form-control form-control-maxlength" maxlength="10" autocomplete="off" />
            <span asp-validation-for="DecimalPlace" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <pd-label asp-for="DisplayOrder" />
            <input asp-for="DisplayOrder" class="form-control form-control-maxlength" maxlength="5" autocomplete="off" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" asp-for="Active">
                <pd-label asp-for="Active" />
            </label>
        </div>
    </div>
</div>